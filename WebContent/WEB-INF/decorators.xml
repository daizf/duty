<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/">
	<!-- 此处用来定义不需要过滤的页面 -->
	<excludes>
        <pattern>/index.jsp</pattern>
		<pattern>/login/*</pattern>
		<pattern>/pages/generalError.jsp</pattern>
		<pattern>/pages/menu_loginout/*</pattern>
		<pattern>/panel/*.html</pattern>
		<pattern>/pages/user/register.jsp</pattern>
		<pattern>/pages/user/backendRegister.jsp</pattern>
        <pattern>/personpicture/*</pattern>
	</excludes>

	<!-- 用来定义装饰器要过滤的页面 -->
	<decorator name="main" page="/pages/decorators/main.jsp">
		<pattern>/welcome.jsp</pattern>
		<pattern>/template/dynamicform.action</pattern>
		<pattern>/page/*.action</pattern>
        <pattern>/datainput/data*.action</pattern>
        <pattern>/user/*.action</pattern>
        <pattern>/patient/*.action</pattern>
        <pattern>/volunteer/*.action</pattern>
        <pattern>/serviceplace/*.action</pattern>
        <pattern>/traincourse/*.action</pattern>
        <pattern>/backend/*.action</pattern>
	</decorator>
</decorators>
