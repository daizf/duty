<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.devMode" value="false" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.custom.i18n.resources" value="resources/LocaleStrings" />

	<package name="default-backend" namespace="/backend" extends="default" >
	    <default-interceptor-ref name="bakcendDefaultStack"></default-interceptor-ref>
		<global-results>
			<result name="error">/pages/generalError.jsp</result>
			<result name="tableIndex">/pages/table/tableIndex.jsp</result>
			<result name="backend_tologin" type="redirectAction">
			   <param name="namespace">/backend</param>
			   <param name="actionName">login</param>
			</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception" result="error" />
		</global-exception-mappings>
		
       <action name="login" class="actions.BackendUserAction" method="login">
           <interceptor-ref name="noLoginStack"></interceptor-ref>
		   <result name="success" type="redirectAction">
              <param name="actionName">index</param>
		   </result>
		   <result name="failure">/pages/menu_loginout/backend_login.jsp</result>
		</action>
		<action name="logout" class="actions.BackendUserAction" method="logout">
		   <interceptor-ref name="noLoginStack"></interceptor-ref> 
		   <result name="success" type="redirectAction">
              <param name="actionName">index</param>
		   </result>
		</action>
		<action name="register" class="actions.BackendUserAction" method="register">
		   <interceptor-ref name="noLoginStack"></interceptor-ref> 
		   <result name="failure">/pages/user/backendRegister.jsp</result>
		   <result name="success" type="redirectAction">
              <param name="actionName">index</param>
		   </result>
		</action>
		
        <action name="index">
		   <result name="success">/welcome.jsp</result>
		</action>
	</package>
	
	<package name="backendUser" namespace="/backend/user" extends="default-backend">
        <action name="index" class="actions.BackendUserAction" method="index"/>
		<action name="initTable" class="actions.BackendUserAction" method="initTable"/>
		<action name="queryTable" class="actions.BackendUserAction" method="queryTable"/>
		<action name="add" class="actions.BackendUserAction" method="add">
		   <result name="success">/pages/user/backendUserEdit.jsp</result>
		</action>
		<action name="edit" class="actions.BackendUserAction" method="edit">
		   <result name="success">/pages/user/backendUserEdit.jsp</result>
		</action>
		<action name="save" class="actions.BackendUserAction" method="save">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		   <result name="failure">/pages/user/backendUserEdit.jsp</result>
		</action>
		<action name="delete" class="actions.BackendUserAction" method="delete">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		</action>
		<action name="lock" class="actions.BackendUserAction" method="lock">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		</action>
		<action name="changePassword" class="actions.BackendUserAction" method="changePassword">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		   <result name="failure">/pages/user/backendChangePwd.jsp</result>
		</action>
	</package>

    <package name="serviceplace" namespace="/backend/serviceplace" extends="default">
        <action name="serviceplacelist" class="actions.ServicePlaceAction" method="servicePlaceList">
            <result name="success">/pages/menu_serviceplace/serviceplacelist.jsp</result>
        </action>
        <action name="serviceplacedelete" class="actions.ServicePlaceAction" method="servicePlaceDelete">
            <result name="success" type="redirectAction">/serviceplace/serviceplacelist</result>
        </action>
        <action name="serviceplaceaddedit" class="actions.ServicePlaceAction" method="servicePlaceAddEdit">
            <result name="success">/pages/menu_serviceplace/serviceplaceaddedit.jsp</result>
        </action>
        <action name="serviceplacesubmit" class="actions.ServicePlaceAction" method="servicePlaceSubmit">
            <result name="success" type="redirectAction">/serviceplace/serviceplacelist</result>
        </action>
    </package>

    <package name="traincourse" namespace="/backend/traincourse" extends="default">
        <action name="traincourselist" class="actions.TrainCourseAction" method="trainCourseList">
            <result name="success">/pages/menu_traincourse/traincourselist.jsp</result>
        </action>
        <action name="traincoursedelete" class="actions.TrainCourseAction" method="trainCourseDelete">
            <result name="success" type="redirectAction">/backend/traincourse/traincourselist</result>
        </action>
        <action name="traincourseaddedit" class="actions.TrainCourseAction" method="trainCourseAddEdit">
            <result name="success">/pages/menu_traincourse/traincourseaddedit.jsp</result>
        </action>
        <action name="traincoursesubmit" class="actions.TrainCourseAction" method="trainCourseSubmit">
            <result name="success" type="redirectAction">/backend/traincourse/traincourselist</result>
        </action>
    </package>

</struts>
