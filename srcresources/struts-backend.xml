<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.devMode" value="false" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.custom.i18n.resources" value="resources/LocaleStrings" />

	<package name="default-backend" namespace="/backend" extends="default" >
	    <default-interceptor-ref name="bakcendDefaultStack"></default-interceptor-ref>
		<global-results>
			<result name="error">/pages/generalError.jsp</result>
			<result name="tableIndex">/pages/table/tableIndex.jsp</result>
			<result name="backend_tologin" type="redirectAction">
			   <param name="namespace">/backend</param>
			   <param name="actionName">login</param>
			</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception" result="error" />
		</global-exception-mappings>
		
       <action name="login" class="actions.BackendUserAction" method="login">
           <interceptor-ref name="noLoginStack"></interceptor-ref>
		   <result name="success" type="redirectAction">
              <param name="actionName">index</param>
		   </result>
		   <result name="failure">/pages/menu_loginout/backend_login.jsp</result>
		</action>
		<action name="logout" class="actions.BackendUserAction" method="logout">
		   <interceptor-ref name="noLoginStack"></interceptor-ref> 
		   <result name="success" type="redirectAction">
              <param name="actionName">index</param>
		   </result>
		</action>
		<action name="register" class="actions.BackendUserAction" method="register">
		   <interceptor-ref name="noLoginStack"></interceptor-ref> 
		   <result name="failure">/pages/user/backendRegister.jsp</result>
		   <result name="success" type="redirectAction">
              <param name="actionName">index</param>
		   </result>
		</action>
		
        <action name="index">
		   <result name="success">/backendHome.jsp</result>
		</action>

        <action name="systemsetting" class="actions.SystemSettingAction" method="modify">
            <result name="success">/pages/menu_system/systemsetting.jsp</result>
        </action>
        <action name="systemsettingsave" class="actions.SystemSettingAction" method="save">
            <result name="success">/pages/menu_system/systemsetting.jsp</result>
        </action>
	</package>
	
	<package name="backendUser" namespace="/backend/user" extends="default-backend">
        <action name="index" class="actions.BackendUserAction" method="index"/>
		<action name="initTable" class="actions.BackendUserAction" method="initTable"/>
		<action name="queryTable" class="actions.BackendUserAction" method="queryTable"/>
		<action name="add" class="actions.BackendUserAction" method="add">
		   <result name="success">/pages/user/backendUserEdit.jsp</result>
		</action>
		<action name="edit" class="actions.BackendUserAction" method="edit">
		   <result name="success">/pages/user/backendUserEdit.jsp</result>
		</action>
		<action name="save" class="actions.BackendUserAction" method="save">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		   <result name="failure">/pages/user/backendUserEdit.jsp</result>
		</action>
		<action name="delete" class="actions.BackendUserAction" method="delete">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		</action>
		<action name="lock" class="actions.BackendUserAction" method="lock">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		</action>
		<action name="changePassword" class="actions.BackendUserAction" method="changePassword">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		   <result name="failure">/pages/user/backendChangePwd.jsp</result>
		</action>
	</package>

    <package name="backendVolunteer" namespace="/backend/volunteer" extends="default-backend">
        <action name="index" class="actions.BackendVolunteerAction" method="index"/>
		<action name="initTable" class="actions.BackendVolunteerAction" method="initTable"/>
		<action name="queryTable" class="actions.BackendVolunteerAction" method="queryTable"/>
		<action name="add" class="actions.BackendVolunteerAction" method="add">
		   <result name="success">/pages/volunteer/backendVolunteerEdit.jsp</result>
		</action>
		<action name="edit" class="actions.BackendVolunteerAction" method="edit">
		   <result name="success">/pages/volunteer/backendVolunteerEdit.jsp</result>
		</action>
		<action name="save" class="actions.BackendVolunteerAction" method="save">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		   <result name="failure">/pages/volunteer/backendVolunteerEdit.jsp</result>
		</action>
		<action name="delete" class="actions.BackendVolunteerAction" method="delete">
		   <result name="success" type="redirectAction"><param name="actionName">index</param></result>
		</action>
	</package>
    
    <package name="serviceplace" namespace="/backend/serviceplace" extends="default-backend">
        <action name="serviceplacelist" class="actions.ServicePlaceAction" method="servicePlaceList">
            <result name="success">/pages/menu_serviceplace/serviceplacelist.jsp</result>
        </action>
        <action name="serviceplacedelete" class="actions.ServicePlaceAction" method="servicePlaceDelete">
            <result name="success" type="redirectAction">/serviceplace/serviceplacelist?type=${type}</result>
        </action>
        <action name="serviceplaceaddedit" class="actions.ServicePlaceAction" method="servicePlaceAddEdit">
            <result name="success">/pages/menu_serviceplace/serviceplaceaddedit.jsp</result>
        </action>
        <action name="serviceplacesubmit" class="actions.ServicePlaceAction" method="servicePlaceSubmit">
            <result name="success" type="redirectAction">/serviceplace/serviceplacelist?type=${type}</result>
        </action>
    </package>

    <package name="traincourse" namespace="/backend/traincourse" extends="default-backend">
        <action name="index" class="actions.BackendTrainCourseAction" method="index"/>
        <action name="initTable" class="actions.BackendTrainCourseAction" method="initTable"/>
        <action name="queryTable" class="actions.BackendTrainCourseAction" method="queryTable"/>

        <action name="delete" class="actions.BackendTrainCourseAction" method="delete">
            <result name="success" type="redirectAction"><param name="actionName">index</param></result>
        </action>
        <action name="add" class="actions.BackendTrainCourseAction" method="add">
            <result name="success">/pages/menu_traincourse/traincourseaddedit.jsp</result>
        </action>
        <action name="edit" class="actions.BackendTrainCourseAction" method="edit">
            <result name="success">/pages/menu_traincourse/traincourseaddedit.jsp</result>
        </action>
        <action name="save" class="actions.BackendTrainCourseAction" method="save">
            <result name="success" type="redirectAction"><param name="actionName">index</param></result>
        </action>
    </package>


    <package name="report" namespace="/backend/report" extends="default-backend">
        <action name="activeTimeReport" class="actions.TimeReportAction" method="getActiveReport">
            <result name="success">/pages/menu_report/activeTimeReport.jsp</result>
        </action>
        <action name="activeTimeReportData" class="actions.TimeReportAction" method="getActiveReportData">
        </action>
        <action name="volunteerDailyReport" class="actions.TimeReportAction" method="getUserDailyReport">
            <result name="success">/pages/menu_report/volunteerDailyReport.jsp</result>
        </action>
        <action name="volunteerMonthlyReport" class="actions.TimeReportAction" method="getUserMonthlyReport">
            <result name="success">/pages/menu_report/volunteerMonthlyReport.jsp</result>
        </action>
        <action name="serviceDailyReport" class="actions.TimeReportAction" method="getServiceDailyReport">
            <result name="success">/pages/menu_report/serviceDailyReport.jsp</result>
        </action>
        <action name="serviceMonthlyReport" class="actions.TimeReportAction" method="getServiceMonthlyReport">
            <result name="success">/pages/menu_report/serviceMonthlyReport.jsp</result>
        </action>
    </package>
    
    <package name="volunterTrainCourse" namespace="/backend/volunterTrainCourse" extends="default-backend">
        <action name="index" class="actions.BackendVolunterTrainCourseAction" method="index"/>
        <action name="initTable" class="actions.BackendVolunterTrainCourseAction" method="initTable"/>
        <action name="queryTable" class="actions.BackendVolunterTrainCourseAction" method="queryTable"/>
        <action name="add" class="actions.BackendVolunterTrainCourseAction" method="add">
            <result name="success">/pages/volunteerTrainCourse/backendVolunteerTrainCourse.jsp</result>
        </action>
        <action name="save" class="actions.BackendVolunterTrainCourseAction" method="save">
            <result name="success" type="redirectAction"><param name="actionName">index</param></result>
        </action>
    </package>
</struts>
