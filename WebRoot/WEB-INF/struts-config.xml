<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
  <data-sources />
  <form-beans >
    <form-bean name="loginForm" type="cn.web.form.LoginForm"></form-bean>
	<form-bean name="employeeForm" type="cn.web.form.EmployeeForm"></form-bean>
	<form-bean name="dutyForm" type="cn.web.form.DutyForm"></form-bean>
  </form-beans>

  <global-exceptions />
  <global-forwards />
  <action-mappings >
    <action path="/login"
            name="loginForm"
            scope="request"
            input="/login.jsp"
            type="cn.web.action.LoginAction">
      		<forward name="login" path="/login.jsp" />
      		<forward name="user" path="/user.jsp" />
      		<forward name="admin" path="/admin.jsp" />
      		<forward name="department" path="/department.jsp"></forward>
    </action>

	<action path="/AddEmp"
			name="employeeForm"
			scope="request"
			type="cn.web.action.AddEmployeeAction">
			<forward name="addemployee" path="/addEmployee.jsp"></forward>
	</action>
	
	<action path="/AddEmployee"
			name="employeeForm"
			scope="request"
			type="cn.web.action.getAddEmployeeAction">
			<forward name="admin" path="/admin.jsp"></forward>
			<forward name="adduser" path="/addEmployee.jsp"></forward>
	</action>
	
	<action path="/DepartmentEntrance"
			type="cn.web.action.DepartmentEntranceAction">
	<forward name="DepartmentListEntrance" path="/employeeDepartment.jsp"></forward>
	</action>
	
	<action path="/DutyEntrance"
			type="cn.web.action.DutyEntranceAction">
			<forward name="DutyListEntrance" path="/dutyDepartment.jsp"></forward>
	</action>
	
	<action path="/getDutyDepartment2_2"
			name="dutyForm"
			scope="request"
			type="cn.web.action.getDutyDepartmentListAction">
			<forward name="allsingledutydepartment" path="/allSingleDutyDepartment.jsp"></forward>
	</action>
	
	<action path="/getEmployeeDepartment2_3"
			name="employeeForm"
			scope="request"
			type="cn.web.action.getEmployeeDepartmentListAction">
			<forward name="allsingledepartment" path="/allSingleEmployeeDepartment.jsp"></forward>
	</action>
	
	<action path="/allSingleEmployeeDepartment"
			name="employeeForm"
			scope="request"
			type="cn.web.action.abcAction">
	</action>
	
	<action path="/amendEmployee"
			name="employeeForm"
			parameter="method"
			scope="session"
			type="cn.web.action.BothMethodEmployeeAction">
			<forward name="updateuser" path="/updateEmployee.jsp"></forward>
	</action>
	
	<action path="/getUpdateEmployee"
			name="employeeForm"
			scope="session"
			type="cn.web.action.getUpdateEmployeeAction">
			<forward name="admin" path="/admin.jsp"></forward>
	</action>
	
	<action path="/AddDut"
			name="dutyForm"
			scope="request"
			type="cn.web.action.AddDutyAction">
	</action>
	
	<action path="/lookDut"
			name="dutyForm"
			scope="request"
			type="cn.web.action.LookSingleDutyAction">
			<forward name="userSingleDutyDepartment" path="/userSingleDutyDepartment.jsp"></forward>
	</action>
	
	<action path="/deptmentlookDut"
			name="dutyForm"
			scope="request"
			type="cn.web.action.LookSingleDepartmentDutyAction">
			<forward name="userSingleDepartmentDutyDepartment" path="/userSingleDepartmentDutyDepartment.jsp"></forward>
	</action>
	
	<action path="/allSingleDepartmentEmployeeDepartment"
			name="dutyForm"
			scope="request"
			type="cn.web.action.abcAction">
	</action>
	
	<action path="/amendDuty"
			name="dutyForm"
			parameter="method"
			scope="request"
			type="cn.web.action.getUserDutyAction">
			<forward name="updatedutyuser" path="/updateDutyUser.jsp"></forward>
	</action>
	
	<action path="/amendDepartmentDuty"
			name="dutyForm"
			parameter="method"
			scope="request"
			type="cn.web.action.getDepartmentDutyAction">
			<forward name="updateDepartmentDutyUser" path="/updateDepartmentDutyUser.jsp"></forward>
	</action>
	
	<action path="/updateDepartmentDutyEmployee"
			name="dutyForm"
			parameter="method"
			scope="request"
			type="cn.web.action.getUpdateDepartmentDutyEmployeeAction">
	</action>
	
	<action path="/updateDutyEmployee"
			name="dutyForm"
			scope="request"
			type="cn.web.action.getUpdateDutyEmployeeAction">
	</action>
	
	<action path="/dutyDepartment"
			name="dutyForm"
			scope="request"
			type="cn.web.action.abcAction">
	</action>
	
	<action path="/amendEmployeeDuty"
			name="dutyForm"
			parameter="method"
			scope="request"
			type="cn.web.action.getAmendDutyAction">
			<forward name="updateEmployeeDutyUser" path="/updateEmployeeDutyUser.jsp"></forward>
	</action>
	
	<action path="/updateEmployeeDutyEmployee"
			name="dutyForm"
			scope="request"
			type="cn.web.action.getUpdateEmployeeDutyEmployeeAction">
	</action>
  </action-mappings>

  <message-resources parameter="com.yourcompany.struts.ApplicationResources" />
   <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
	        <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,
	                                                  /WEB-INF/validation.xml"/>
   </plug-in>

</struts-config>